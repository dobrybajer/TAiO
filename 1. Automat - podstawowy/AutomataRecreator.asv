function o_mtx = AutomataRecreator(mtx)
%AUTOMATARECREATOR Funkcja konwertuj¹c
%   Detailed explanation goes here
    o_mtx=zeros(size(mtx));
    for i=1:size(mtx,3)
        [~, maxInd]=max(mtx(:,:,i));    
        for j=1:length(maxInd);
           o_mtx(maxInd(j),j,i)=1; 
        end
    end
end

